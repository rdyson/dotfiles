{
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[ruby]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.insertSpaces": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.tabSize": 2
  },
  "cSpell.userWords": [
    "basebackup",
    "letsencrypt",
    "protocat",
    "rdyson",
    "rogro"
  ],
  "editor.accessibilitySupport": "off",
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorSurroundingLines": 1,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.enabled": false,
  "editor.rulers": [120],
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "files.autoSave": "afterDelay",
  "files.exclude": {
    "**/node_modules": true
  },
  "files.insertFinalNewline": true,
  "git.openRepositoryInParentFolders": "never",
  "scm.diffDecorationsGutterWidth": 3,
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontSize": 22,
  "workbench.colorTheme": "Bearded Theme Arc",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.localHistory.exclude": {
    "**/node_modules": true
  },
  "editor.multiCursorLimit": 20000,
  "cSpell.ignoreWords": ["blockout", "blockouts"],
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.fontSize": 24,
  "editor.fontFamily": "'Hack Nerd Font', Arial",
  "editor.codeActionsOnSave": {},
  "markdown.preview.fontSize": 24,
  "editor.glyphMargin": true,
  "custom-ui-style.electron": {
    "titleBarStyle": "customButtonsOnHover"
  },
  "window.titleBarStyle": "native",
  "window.customTitleBarVisibility": "never",
  "custom-ui-style.stylesheet": {
    ".line-numbers": {
      "width": "35px !important",
      "font-size": "22px !important"
    },
    ".monaco-editor-hover, .monaco-hover": {
      "box-shadow": "0px 8px 32px rgba(0,0,0,.45) !important",
      "padding": "10px !important",
      "background-image": "linear-gradient(#253649 0%, #2a2b38 100%) !important",
      "backdrop-filter": "blur(3px) !important",
      "border-radius": "20px !important",
      "border": "none !important"
    },
    ".codicon[class*=codicon-]": {
      "font-size": "20px !important",
      "margin-left": "0px !important"
    },
    ".quick-input-widget": {
      "transform": "translateY(-50%) !important",
      "top": "40% !important",
      "box-shadow": "0px 8px 20px rgba(0, 0, 0, .45) !important",
      "padding": "10px 10px 18px 10px !important",
      "backdrop-filter": "blur(3px) !important",
      "border-radius": "20px !important"
    },
    ".quick-input-filter .monaco-inputbox": {
      "border-radius": "12px !important",
      "padding": "8px !important",
      "border": "none !important",
      "font-size": "18px !important",
      "margin-bottom": "16px !important"
    },
    "#command-blur": {
      "position": "absolute",
      "width": "100%",
      "height": "100%",
      "top": "0",
      "left": "0",
      "backdrop-filter": "blur(8px)"
    },
    ".anysphere-markdown-container-root": "font-size: 18px; line-height: 1.4;"
  },
  "editor.inlineSuggest.suppressSuggestions": true,
  "update.mode": "none",
  "opa.dependency_paths.opa": "/Users/rdyson/opa",
  "opa.dependency_paths.regal": "/Users/rdyson/regal",
  "opa.languageServers": ["regal"],
  "explorer.confirmDelete": false,
  "cursor.cpp.disabledLanguages": ["plaintext", "markdown", "scminput"],
  "extensions.ignoreRecommendations": true,
  "workbench.activityBar.location": "hidden",
  "workbench.statusBar.visible": false
}
