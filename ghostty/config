# theme
theme = gruber-darker
background = 000000

# font
font-size = 23
font-family = "MesloLGS Nerd Font Mono"

# decoration
macos-titlebar-style = hidden
window-padding-x = 14
window-padding-y = 10

# new split
keybind = super+shift+equal=new_split:down
keybind = super+shift+minus=new_split:right

# navigate splits
keybind = ctrl+h=goto_split:left
keybind = ctrl+l=goto_split:right
keybind = ctrl+k=goto_split:top
keybind = ctrl+j=goto_split:bottom
keybind = super+shift+enter=toggle_split_zoom

# resize splits
keybind = ctrl+shift+h=resize_split:left,50
keybind = ctrl+shift+l=resize_split:right,50
keybind = ctrl+shift+k=resize_split:up,50
keybind = ctrl+shift+j=resize_split:down,50
keybind = ctrl+shift+equal=equalize_splits

# quick terminal
keybind = super+\=toggle_quick_terminal

# misc
focus-follows-mouse = true
